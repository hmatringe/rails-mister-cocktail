<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h1><%= @cocktail.name %></h1>
      <% if @cocktail.photo? %>
        <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
      <% end %>
      <br><br>
      <ul>  <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to "Destroy", dose, method: :delete, class: "destroy"  %>
        </li>
        <% end %>
      </ul>
      <%= link_to 'Back to home', cocktails_path %>
    </div>
    <div class="col-xs-2">
      <br><br>
      <%= render "doses/doseform" %>
    </div>
  </div>
</div>

